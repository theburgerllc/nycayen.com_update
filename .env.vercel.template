# Vercel Environment Variables Template
# Copy these to your Vercel project environment settings

# Core Application Settings
NEXT_PUBLIC_SITE_URL=https://your-domain.vercel.app
NODE_ENV=production

# Instagram Integration (Required for gallery)
NEXT_PUBLIC_INSTAGRAM_TOKEN=your_instagram_basic_display_token
NEXT_PUBLIC_INSTAGRAM_HANDLE=nycayenmoore
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret

# Contact Form Integration (Formspree)
NEXT_PUBLIC_FORMSPREE_ID=your_formspree_form_id
FORMSPREE_API_KEY=your_formspree_api_key

# Analytics & Tracking
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Chat Widget (Tidio - Optional)
NEXT_PUBLIC_TIDIO_KEY=your_tidio_key

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Stripe Payments (Optional - for booking deposits)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Authentication (Optional - for admin features)
NEXTAUTH_SECRET=your_nextauth_secret_key_32_chars_min
NEXTAUTH_URL=https://your-domain.vercel.app

# Database (Optional - for advanced features)
DATABASE_URL=your_database_connection_string

# Security & Performance
NEXT_PUBLIC_CSP_NONCE=auto_generated_by_vercel
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Cron Job Security (Generate a random 32+ character string)
CRON_SECRET=your_secure_random_string_for_cron_authentication