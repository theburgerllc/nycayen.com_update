{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "check-coverage": true,
  "exclude": [
    "**/*.d.ts",
    "**/*.test.{js,jsx,ts,tsx}",
    "**/*.spec.{js,jsx,ts,tsx}",
    "**/*.stories.{js,jsx,ts,tsx}",
    "**/coverage/**",
    "**/node_modules/**",
    "**/.next/**",
    "**/dist/**",
    "**/build/**",
    "**/storybook-static/**",
    "**/playwright-report/**",
    "**/test-results/**",
    "jest.config.js",
    "next.config.js",
    "tailwind.config.js",
    "postcss.config.js"
  ],
  "branches": 70,
  "functions": 70,
  "lines": 70,
  "statements": 70,
  "reporter": [
    "text",
    "text-summary", 
    "html",
    "lcov",
    "json-summary"
  ],
  "report-dir": "coverage"
}